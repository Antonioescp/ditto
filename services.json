[
  {
    "type": "REST",
    "name": "Servicio REST con ResponseBody",
    "port": 8080,
    "endpoints": [
      {
        "path": "/api/data",
        "method": "POST",
        "statusCode": 200,
        "responseBody": {
          "message": "Datos procesados exitosamente",
          "method": "{{request.method}}",
          "path": "{{request.path}}",
          "queryParams": "{{request.query}}",
          "requestBody": "{{request.body}}",
          "userAgent": "{{request.headers.User-Agent}}",
          "timestamp": "{{request.headers.Date}}"
        },
        "headers": {
          "Content-Type": "application/json",
          "X-Custom-Header": "CustomValue"
        },
        "delayMs": 100
      }
    ]
  },
  {
    "type": "REST",
    "name": "Servicio REST con ResponseBodyFilePath",
    "port": 8081,
    "endpoints": [
      {
        "path": "/api/users",
        "method": "GET",
        "statusCode": 200,
        "responseBodyFilePath": "responses/user-response.json",
        "headers": {
          "Content-Type": "application/json"
        },
        "delayMs": 50
      }
    ]
  },
  {
    "type": "TCP",
    "name": "Servicio TCP con ResponseBody",
    "port": 9999,
    "endpoints": [
      {
        "pattern": "CMD:(?<command>\\w+)\\s+KEY:(?<key>\\w+)\\s+VALUE:(?<value>.*)",
        "responseBody": {
          "status": "OK",
          "receivedCommand": "{{request.captures.command}}",
          "key": "{{request.captures.key}}",
          "value": "{{request.captures.value}}",
          "fullMessage": "{{request.message}}",
          "parsedMessage": "{{request.parsedMessage}}",
          "clientAddress": "{{request.clientAddress}}",
          "clientPort": "{{request.clientPort}}",
          "timestamp": "{{request.timestamp}}"
        },
        "delayMs": 100
      }
    ]
  },
  {
    "type": "TCP",
    "name": "Servicio TCP con ResponseBodyFilePath",
    "port": 9998,
    "endpoints": [
      {
        "pattern": ".*",
        "responseBodyFilePath": "responses/tcp-response.json",
        "delayMs": 50
      }
    ]
  },
  {
    "type": "SOAP",
    "name": "Servicio SOAP con ResponseBody",
    "port": 8888,
    "endpoints": [
      {
        "path": "/soap/GetData",
        "method": "POST",
        "statusCode": 200,
        "responseBody": "<?xml version=\"1.0\" encoding=\"utf-8\"?><soap:Envelope xmlns:soap=\"http://schemas.xmlsoap.org/soap/envelope/\"><soap:Body><GetDataResponse><DataId>{{request.body.GetData.DataId}}</DataId><DataName>{{request.body.GetData.DataName}}</DataName><Method>{{request.method}}</Method><Path>{{request.path}}</Path><Timestamp>{{request.headers.Date}}</Timestamp></GetDataResponse></soap:Body></soap:Envelope>",
        "headers": {
          "Content-Type": "text/xml; charset=utf-8",
          "SOAPAction": "\"GetData\""
        },
        "delayMs": 100
      }
    ]
  },
  {
    "type": "SOAP",
    "name": "Servicio SOAP con ResponseBodyFilePath",
    "port": 8889,
    "endpoints": [
      {
        "path": "/soap/GetProduct",
        "method": "POST",
        "statusCode": 200,
        "responseBodyFilePath": "responses/soap-response.xml",
        "headers": {
          "Content-Type": "text/xml; charset=utf-8",
          "SOAPAction": "\"GetProduct\""
        },
        "delayMs": 150
      }
    ]
  },
  {
    "type": "COM",
    "name": "Servicio COM con ResponseBody",
    "port": 3,
    "endpoints": [
      {
        "pattern": "CMD:(?<command>\\w+)\\s+KEY:(?<key>\\w+)\\s+VALUE:(?<value>.*)",
        "responseBody": {
          "status": "OK",
          "receivedCommand": "{{request.captures.command}}",
          "key": "{{request.captures.key}}",
          "value": "{{request.captures.value}}",
          "fullMessage": "{{request.message}}",
          "parsedMessage": "{{request.parsedMessage}}",
          "timestamp": "{{request.timestamp}}"
        },
        "delayMs": 100
      }
    ]
  },
  {
    "type": "COM",
    "name": "Servicio COM con ResponseBodyFilePath",
    "port": 4,
    "endpoints": [
      {
        "pattern": ".*",
        "responseBodyFilePath": "responses/com-response.json",
        "delayMs": 200
      }
    ]
  }
]
